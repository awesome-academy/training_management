<div class="container">
  <div class="card card-register mx-auto mt-5">
    <div class="card-header"><%= yield(:title) %></div>
    <div class="card-body">
      <%= form_for [:admin, @user] do |f| %>
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "user@exlample.com",
            class: "form-control", id: "exampleInputEmail1" %>
        </div>

        <div class="form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", placeholder: (t "admin.users.new.password"),
           class: "form-control", id: "exampleInputPassword1" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: (t "admin.users.new.confirm"),
            class: "form-control", id: "exampleConfirmPassword"%>
        </div>

        <div class="form-group">
          <%= f.label :role %><br />
          <%= f.select :role, User.roles.keys.to_a, class: "form-control" %>
        </div>
        <%= f.submit yield(:button_text), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
