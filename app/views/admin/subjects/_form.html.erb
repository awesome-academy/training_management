<%= form_for [:admin,@subject], class: "form-horizontal" do |f| %>
  <div class="form-group">
    <div class=".col-xs-6 .col-md-4">
      <%= f.label :subject_name, class: "control-label col-sm-2" %>
      <div class="col-sm-4">
        <%= f.text_field :subject_name, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class=".col-xs-6 .col-md-4">
      <%= f.fields_for :task do |builder| %>
        <%= render "task_fields", f: builder %>
      <% end %>
    </div>
  </div>
  <p><%= link_to_add_fields (t "admin.subjects.new.add_task"), f, :tasks %></p>
  <p><%= f.submit (t "admin.subjects.new.submit") %></p>
<% end %>
