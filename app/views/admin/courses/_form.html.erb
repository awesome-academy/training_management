<%= form_for [:admin, @course] do |f| %>
  <%= render partial: "share/error_messages", locals: {object: @course}, :formats => [:html]  %>
  <div class="">
    <div class="form-group">
      <%= f.label :course_name, (t ".course_name")%>
      <%= f.text_field :course_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :start_date, (t ".start_date") %>
      <%= f.date_field :start_date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :end_date, (t ".end_date") %>
      <%= f.date_field :end_date, class: "form-control" %>
    </div>
  </div>

  <div class="">
    <%= f.fields_for :course_subjects do |ff| %>
      <div class="">
        <%= ff.hidden_field :subject_id %>
        <%= ff.label :_destroy do %>
          <%= ff.check_box :_destroy %><%= ff.object.subject_name %>
        <% end %>
      </div>
    <% end %>
  </div>

  </div>
  <%= f.submit yield(:button_text), class: "btn" %>
<% end %>
