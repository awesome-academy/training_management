<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
  <%= link_to (t ".logo"), root_path, class: "navbar-brand" %>
  <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarResponsive">
    <ul class="navbar-nav navbar-sidenav" id="exampleAccordion">
      <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Dashboard">
        <%= link_to (t ".dashboard"), root_path, class: "nav-link-text nav-link" %>
      </li>
      <% if user_signed_in? %>
        <% if current_user.admin? %>

          <li class="nav-item" data-toggle="tooltip" data-placement="right">
            <%= link_to (t ".course"), admin_courses_path, class: "nav-link-text nav-link" %>
          </li>

          <li class="nav-item" data-toggle="tooltip" data-placement="right">
            <%= link_to (t ".subject"), admin_subjects_path, class: "nav-link-text nav-link" %>
          </li>

          <li class="nav-item" data-toggle="tooltip" data-placement="right">
            <%= link_to (t ".all_users"), admin_users_path, class: "nav-link-text nav-link" %>
          </li>
        <% end %>

        <% if current_user.trainee? %>
          <li class="nav-item" data-toggle="tooltip" data-placement="right">
            <%= link_to trainee_root_path, class: "nav-link" do %>
              <i class="fa fa-fw fa-dashboard"></i><%= t".subject " %>
            <% end %>
          </li>
        <% end %>
      <% end %>
    </ul>

    <ul class="navbar-nav ml-auto">
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle mr-lg-2" id="messagesDropdown" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <i class="fa fa-fw fa-envelope"></i>
          <span class="d-lg-none"><%= t ".messages" %>
            </span>
          <span class="indicator text-primary d-none d-lg-block">
              <i class="fa fa-fw fa-circle"></i>
            </span>
        </a>
      </li>

      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle mr-lg-2" id="alertsDropdown" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <i class="fa fa-fw fa-bell"></i>
          <span class="d-lg-none"><%= t ".alerts" %>
            </span>
          <span class="indicator text-warning d-none d-lg-block">
              <i class="fa fa-fw fa-circle"></i>
            </span>
        </a>

        <div class="dropdown-menu" aria-labelledby="alertsDropdown">
          <h6 class="dropdown-header"><%= t ".new_alerts" %></h6>
          <div class="dropdown-divider"></div>
        </div>
      </li>


      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
            <%= t ".account" %><b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li>
              <%= link_to t(".logout"), destroy_user_session_path,
                class: "dropdown-item",method: :delete %>
            </li>

            <% if current_user.admin? %>
              <li>
                <%= link_to t(".profile"), admin_user_path(current_user),
                  class: "dropdown-item" %>
              </li>

              <li>
                <%= link_to t(".setting"), edit_admin_user_path(current_user),
                  class: "dropdown-item" %>
              </li>
            <% elsif current_user.trainee? %>
              <li>
                <%= link_to t(".profile"), trainee_user_path(current_user),
                  class: "dropdown-item" %>
              </li>

              <li>
                <%= link_to t(".setting"), edit_trainee_user_path(current_user),
                  class: "dropdown-item" %>
              </li>
            <% else %>
               <li>
                <%= link_to t(".profile"), trainer_user_path(current_user),
                  class: "dropdown-item" %>
              </li>

              <li>
                <%= link_to t(".setting"), edit_trainer_user_path(current_user),
                  class: "dropdown-item" %>
              </li>
            <% end %>
            <li class="divider"></li>
          </ul>
        </li>
      <% end %>
    </ul>
  </div>
</nav>
